@model TestTask_WebClients.Models.Customer



<script>
    function setSubmit() {
        $('#deleteForm').submit(function (event) {
            event.preventDefault();


            $.ajax({
                url: '/Customers/Delete/' + $('#Id').val(),
                type: 'DELETE',
                success: function (resp) {
                    window.location = '/Customers';
                },
                error: function (resp) {
                    console.log("error");
                    console.log(resp);
                }
            })
        });
    }

    $(document).ready(setSubmit)
</script>



